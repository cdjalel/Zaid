<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity2">

    <LinearLayout
        android:id="@+id/alabna_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/abna_alabna_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/albanat_linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/sonsNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/sonsTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/sons" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/albanat_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/banat_alabna_linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/alabna_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/daughtersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/daughtersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/daughters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/abna_alabna_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/banat_alabna_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/alabna_linearLayout">

        <NumberPicker
            android:id="@+id/sonsOfSonsNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/sonsOfSonsTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="أبناء\nالأبناء:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/banat_alabna_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toStartOf="@+id/abna_alabna_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albanat_linearLayout">

        <NumberPicker
            android:id="@+id/daughtersOfSonsNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/daughtersOfSonsTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="بنات\nالأبناء:"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonNext1"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:background="#cc98ff8d"
        android:onClick="onNextClicked"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abna_alabna_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>