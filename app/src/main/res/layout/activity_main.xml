<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="8dp"
    style="@style/ZaidAppTheme"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/yellowFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorSecondary"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@id/buttonAlhal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blackBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/guideline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <RadioGroup
                        android:id="@+id/radioGroupMadhab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="360dp">

                        <RadioButton
                            android:id="@+id/radioButtonMaliki"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:layoutDirection="ltr"
                            android:onClick="onMadhabButtonClicked"
                            android:text="@string/maliki" />

                        <RadioButton
                            android:id="@+id/radioButtonChafi3i"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layoutDirection="ltr"
                            android:onClick="onMadhabButtonClicked"
                            android:text="@string/chafi3i" />

                        <RadioButton
                            android:id="@+id/radioButtonHanafi"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layoutDirection="ltr"
                            android:onClick="onMadhabButtonClicked"
                            android:text="@string/hanafi" />

                        <RadioButton
                            android:id="@+id/radioButtonHambali"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layoutDirection="ltr"
                            android:onClick="onMadhabButtonClicked"
                            android:text="@string/hambali" />

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/radioGroupMadhab"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="363dp">

                        <RadioGroup
                            android:id="@+id/radioGroupGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButtonMale"
                                style="@style/ZaidAppTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layoutDirection="ltr"
                                android:onClick="onGenderButtonClicked"
                                android:text="@string/male" />

                            <RadioButton
                                android:id="@+id/radioButtonFemale"
                                style="@style/ZaidAppTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:checked="false"
                                android:onClick="onGenderButtonClicked"
                                android:text="@string/female" />
                        </RadioGroup>

                        <CheckBox
                            android:id="@+id/fatherCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:text="@string/father" />

                        <CheckBox
                            android:id="@+id/motherCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:layoutDirection="ltr"
                            android:text="@string/mother" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                        tools:layout_conversion_absoluteHeight="32dp"
                        tools:layout_conversion_absoluteWidth="332dp">

                        <CheckBox
                            android:id="@+id/aljadCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layoutDirection="ltr"
                            android:text="@string/grand_father" />

                        <CheckBox
                            android:id="@+id/aljadahLiAbCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layoutDirection="ltr"
                            android:text="@string/paternal_grand_mother" />

                        <CheckBox
                            android:id="@+id/aljadahLiOmCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:text="@string/maternal_grand_mother" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_horizontal"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayout3"
                        tools:layout_conversion_absoluteHeight="wrap_content"
                        tools:layout_conversion_absoluteWidth="344dp">

                        <CheckBox
                            android:id="@+id/azawjCheckBox"
                            style="@style/ZaidAppTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layoutDirection="ltr"
                            android:text="@string/husband" />

                        <TextView
                            android:id="@+id/zawjatTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/zawjatEditText"
                            android:text="@string/wives"
                            android:theme="@style/ZaidAppTheme" />

                        <EditText
                            android:id="@+id/zawjatEditText"
                            style="@style/ZaidAppTheme.editTextStyle"
                            android:layout_marginEnd="15dp" />

                        <TextView
                            android:id="@+id/sonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsEditText"
                            android:text="@string/sons" />

                        <EditText
                            android:id="@+id/sonsEditText"
                            style="@style/ZaidAppTheme.editTextStyle"
                            android:layout_marginEnd="15dp" />

                        <TextView
                            android:id="@+id/daughtersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/daughtersEditText"
                            android:text="@string/daughters" />

                        <EditText
                            android:id="@+id/daughtersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/alikhwa_li_om_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
                        tools:layout_conversion_absoluteHeight="wrap_content"
                        tools:layout_conversion_absoluteWidth="226dp">

                        <TextView
                            android:id="@+id/sonsOfSonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsOfSonsEditText"
                            android:text="أبناء الأبناء:" />

                        <EditText
                            android:id="@+id/sonsOfSonsEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/daughtersOfSonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/daughtersOfSonsEditText"
                            android:text="بنات الأبناء:" />

                        <EditText
                            android:id="@+id/daughtersOfSonsEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/alikhwa_li_om_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/alikhwa_alashika_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayout5">

                        <TextView
                            android:id="@+id/maternalBrothersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/maternalBrothersEditText"
                            android:text="الإخوة لأم:" />

                        <EditText
                            android:id="@+id/maternalBrothersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/maternalSistersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/maternalSistersEditText"
                            android:text="الأخوات لأم:" />

                        <EditText
                            android:id="@+id/maternalSistersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alikhwa_alashika_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/alikhwa_li_ab_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alikhwa_li_om_linearLayout">

                        <TextView
                            android:id="@+id/fullBrothersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/fullBrothersEditText"
                            android:text="الإخوة الأشقاء:" />

                        <EditText
                            android:id="@+id/fullBrothersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/fullSistersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/fullSistersEditText"
                            android:text="الأخوات الشقيقات:" />

                        <EditText
                            android:id="@+id/fullSistersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alikhwa_li_ab_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/abna_alikhwa_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alikhwa_alashika_linearLayout">

                        <TextView
                            android:id="@+id/paternalBrothersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/paternalBrothersEditText"
                            android:text="الإخوة لأب:" />

                        <EditText
                            android:id="@+id/paternalBrothersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/paternalSistersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/paternalSistersEditText"
                            android:text="الأخوات لأب:" />

                        <EditText
                            android:id="@+id/paternalSistersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/abna_alikhwa_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/ala3mam_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alikhwa_li_ab_linearLayout">

                        <TextView
                            android:id="@+id/SonsOfFullBrothersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsOfFullBrothersEditText"
                            android:text="أبناء الإخوة الأشقاء:" />

                        <EditText
                            android:id="@+id/sonsOfFullBrothersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/sonsOfPaternalBrothersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsOfPaternalBrothersEditText"
                            android:text="أبناء الإخوة لأب:" />

                        <EditText
                            android:id="@+id/sonsOfPaternalBrothersEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ala3mam_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@id/abna_ala3mam_linearLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/abna_alikhwa_linearLayout">

                        <TextView
                            android:id="@+id/fullUnclesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/fullUnclesEditText"
                            android:text="الأعمام الأشقاء:" />

                        <EditText
                            android:id="@+id/fullUnclesEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/paternalUnclesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/paternalUnclesEditText"
                            android:text="الأعمام لأب:" />

                        <EditText
                            android:id="@+id/paternalUnclesEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/abna_ala3mam_linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ala3mam_linearLayout">

                        <TextView
                            android:id="@+id/sonsOfFullUnclesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsOfFullUnclesEditText"
                            android:text="أبناء الأعمام الأشقاء:" />

                        <EditText
                            android:id="@+id/sonsOfFullUnclesEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />

                        <TextView
                            android:id="@+id/sonsOfPaternalUnclesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:labelFor="@id/sonsOfPaternalUnclesEditText"
                            android:text="أبناء الأعمام لأب:" />

                        <EditText
                            android:id="@+id/sonsOfPaternalUnclesEditText"
                            style="@style/ZaidAppTheme.editTextStyle" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonAlhal"
        style="@style/ZaidAppTheme.btnStyle"
        android:onClick="onHalClicked"
        android:text="@string/alhal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yellowFrame" />

</androidx.constraintlayout.widget.ConstraintLayout>