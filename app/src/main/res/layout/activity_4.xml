<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity4">


    <LinearLayout
        android:id="@+id/abna_alikhwa_alashika_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ala3mam_alashika_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abna_alikhwa_li_ab_linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/sonsOfFullBrothersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/SonsOfFullBrothersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="أبناء الإخوة\nالأشقاء:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/abna_alikhwa_li_ab_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ala3mam_li_ab_linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/abna_alikhwa_alashika_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/sonsOfPaternalBrothersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/sonsOfPaternalBrothersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="أبناء الإخوة\nلأب:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ala3mam_alashika_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/abna_ala3mam_alashika_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ala3mam_li_ab_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/abna_alikhwa_alashika_linearLayout">

        <NumberPicker
            android:id="@+id/fullUnclesNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/fullUnclesTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الأعمام\nالأشقاء:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ala3mam_li_ab_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/abna_ala3mam_li_ab_linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/ala3mam_alashika_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abna_alikhwa_li_ab_linearLayout">

        <NumberPicker
            android:id="@+id/paternalUnclesNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/paternalUnclesTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الأعمام\nلأب:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/abna_ala3mam_alashika_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abna_ala3mam_li_ab_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/ala3mam_alashika_linearLayout">

        <NumberPicker
            android:id="@+id/sonsOfFullUnclesNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/sonsOfFullUnclesTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="أبناء الأعمام\nالأشقاء:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/abna_ala3mam_li_ab_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toStartOf="@+id/abna_ala3mam_alashika_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ala3mam_li_ab_linearLayout">

        <NumberPicker
            android:id="@+id/sonsOfPaternalUnclesNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/sonsOfPaternalUnclesTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="أبناء الأعمام\nلأب:"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext1"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:background="#cc98ff8d"
        android:onClick="onNextClicked"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abna_ala3mam_alashika_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>