<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity3">


    <LinearLayout
        android:id="@+id/alikhwa_li_om_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/alikhwa_alashika_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alakhawat_li_om_linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/maternalBrothersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/maternalBrothersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الإخوة\nلأم:"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alakhawat_li_om_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/alakhawat_ashakikat_linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/alikhwa_li_om_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <NumberPicker
            android:id="@+id/maternalSistersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/maternalSistersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الأخوات\nلأم:"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alikhwa_alashika_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/alikhwa_li_ab_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alakhawat_ashakikat_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/alikhwa_li_om_linearLayout">

        <NumberPicker
            android:id="@+id/fullBrothersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/fullBrothersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الإخوة\nالأشقاء:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alakhawat_ashakikat_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/alakhawat_li_ab_linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/alikhwa_alashika_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alakhawat_li_om_linearLayout">

        <NumberPicker
            android:id="@+id/fullSistersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/fullSistersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الأخوات\nالشقيقات:"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alikhwa_li_ab_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alakhawat_li_ab_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/alikhwa_alashika_linearLayout">

        <NumberPicker
            android:id="@+id/paternalBrothersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/paternalBrothersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الإخوة\nلأب:"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alakhawat_li_ab_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext1"
        app:layout_constraintEnd_toStartOf="@+id/alikhwa_li_ab_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alakhawat_ashakikat_linearLayout">

        <NumberPicker
            android:id="@+id/paternalSistersNumberPicker"
            android:layout_width="45dp"
            android:layout_height="120dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/paternalSistersTextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="الأخوات\nلأب:"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext1"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:background="#cc98ff8d"
        android:onClick="onNextClicked"
        android:text="التالي"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alikhwa_li_ab_linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>