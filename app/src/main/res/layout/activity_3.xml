<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daughtersOfSonsNumberPicker"
            android:layout_marginRight="0dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:text="بنات الأبناء:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daughtersOfSonsTextView"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sonsOfSonsNumberPicker"
            android:layout_marginRight="1dp"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:text="أبناء الأبناء:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sonsOfSonsTextView"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maternalSistersNumberPicker"
            android:layout_marginRight="5dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:text="أخوات لأم:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maternalSistersTextView"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maternalBrothersNumberPicker"
            android:layout_marginRight="5dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:text="إخوة لأم:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maternalBrothersTextView"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:text="التالي"
        android:id="@+id/buttonNext1"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:onClick="onNextClicked"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:background="#cc98ff8d" />

</LinearLayout>