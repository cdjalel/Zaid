<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".ActivityResult"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/principalLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resultTableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/resultTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></LinearLayout>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="right|center_vertical"
                android:padding="10dp"
                android:text="@string/title_activity_result"
                app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/resultTableLayout"
                tools:layout_conversion_absoluteHeight="27dp"
                tools:layout_conversion_absoluteWidth="402dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/changeMassalaBtn"
                app:layout_constraintTop_toBottomOf="@id/resultTextView"
                tools:layout_conversion_absoluteHeight="95dp"
                tools:layout_conversion_absoluteWidth="411dp">

                <Button
                    android:id="@+id/changeMassalaBtn"
                    style="@style/ZaidAppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cc98ff8d"
                    android:onClick="onChangeMassalaClicked"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="تغيير المسألة"
                    android:textSize="@dimen/btn_font_size"
                    app:layout_constraintEnd_toStartOf="@+id/restartBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="96dp" />

                <Button
                    android:id="@+id/restartBtn"
                    style="@style/ZaidAppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cc98ff8d"
                    android:onClick="onRestartClicked"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="مسألة جديدة"
                    android:textSize="@dimen/btn_font_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/changeMassalaBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_conversion_absoluteHeight="48dp"
                    tools:layout_conversion_absoluteWidth="100dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>